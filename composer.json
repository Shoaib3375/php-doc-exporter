{
    "name": "shoaib3375/php-doc-exporter",
    "description": "All-in-one Laravel document exporter",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "php",
        "pdf",
        "excel",
        "word",
        "csv",
        "exporter",
        "bangla",
        "unicode"
    ],
    "authors": [
        {
            "name": "Shoaib3375",
            "email": "mestabd60@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shoaib3375\\PhpDocExporter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shoaib3375\\PhpDocExporter\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "dompdf/dompdf": "^2.0",
        "phpoffice/phpspreadsheet": "^1.28",
        "phpoffice/phpword": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration and Blade template support (^10.0|^11.0)"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shoaib3375\\PhpDocExporter\\PhpDocExporterServiceProvider"
            ]
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/examples",
            "/.gitignore",
            "/.phpunit.result.cache",
            "/phpunit.xml",
            "/ARCHITECTURE.md",
            "/BLADE_API_GUIDE.md",
            "/IMPLEMENTATION_SUMMARY.md",
            "/IMPLEMENTATION_COMPLETE.md",
            "/TESTING_GUIDE.md",
            "/QUICK_REFERENCE.md",
            "/DOCUMENTATION_INDEX.md"
        ]
    }
}
